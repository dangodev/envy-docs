!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %title= current_page.data.title || 'CentreLearn'

    = stylesheet_link_tag 'code'
    = stylesheet_link_tag 'application'

  %body{ class: page_classes }
    %div.wrapper
      %div.nav
        %ul
          %li.nav-item{is_page_active('/')}= link_to 'Introduction', 'index.html'
          - get_pages().each.with_index do |p, i|
            %li.nav-item{is_page_active(p.url)}= link_to "#{i+1}. #{p.data.title}", p.path
          %li.envy
            =link_to image_tag("madewithenvy.svg", alt: "Made With Envy"), "//envylabs.com", title: "Made With Envy", target: "_blank"
      %div.content
        = preserve do
          = yield
    = javascript_include_tag  'application'
